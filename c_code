#include <stdio.h>

int main()
{
    int i,j,n,num=0;
    printf("enter num= ");
    scanf("%d",&n);
    for(i=0;i<n-1;i++){
        for(j=0;j<i;j++){
            printf(" ");
        }
        for(;j<n;j++){
            printf("*");
        }
        printf("\n");
    }
    for(i=0;i<n;i++){
        for(j=0;j<n-i-1;j++){
            printf(" ");
        }
        for(;j<n;j++){
            printf("*");
        }
        printf("\n");
    }
    

    return 0;
}
